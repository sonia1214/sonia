@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="showtime1" style="overflow-y:auto">


    <table style="width:90% ">
        <caption>User DashBoard</caption>
        <tr style="font-size:16px;border: 2px solid black;">

            <th> ID </th>
            <th> NAME</th>
            <th>USER&nbsp;NAME</th>
            <th>PASSWORD</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>ADDRESS</th>
            <th>STATUS</th>
            <th>ROLE</th>
            <th>GENDER</th>
            <th style="width:3%">Update</th>
            <th style="width:3%">Delete</th>

        </tr>

        @foreach (var x in Model)
        {
            <tr>

                <td> @x.Id  </td>
                <td> @x.Name  </td>
                <td> @x.UserName  </td>
                <td> @x.Pin  </td>
                <td> @x.Email  </td>
                <td> @x.Phone </td>
                <td> @x.Address  </td>
                <td> @x.Status </td>
                <td> @x.Role</td>
                <td> @x.gender  </td>
                <td> <a href="/Admin/UpdateUser/@x.Id" class="btn btn-default ">Update</a></td>
                <td> <a href="/Admin/DeleteUser/@x.Id" class="btn btn-default ">Delete</a></td>

            </tr>

        }
    </table>


    <ul>
        <li><a href="#" class="btn btn-default " data-toggle="modal" data-target="#myModal"> Add</a></li>
    </ul>

</div>
<!--Add-->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: rgba(92, 183, 92, 0.67); color: white;">
            <button id="close" type="button" class="close" style="margin-right:-100px;color:white" data-dissmiss="modal">&times;</button>
            <h4 class="modal-title" style="font-size:xx-large;margin-left:25px">Add User</h4>
            <div class="modal-body">

                <form action="/Admin/AddUser" method="post">
                    <div class="form-group " style="padding-left:125px">


                        <label for="UserName">UserName</label>
                        <input type="text" name="UserName" id="usernam" value="" style="color:black " />
                        
                        <br />
                        

                        <label for="Name">Name</label>
                        <input id="Name" name="Name" value="" type="text" style="color:black">
                        <br />

                        <br />
                        <label for="Pin">Pin</label>
                        <input id="Pin" name="Pin" value="" type="password" style="color:black">
                        <br />
                        <label for="Role">Account type</label>
                        <input type="radio" name="role" style="width:25px" value="student" checked>Student<br>
                        <input type="radio" style="width:25px" name="role" value="admin" >Admin<br>
                        <input type="radio" style="width:25px" name="role" value="teacher" >Teaacher<br>
                        <br />
                        <label for="Email">Email</label>
                        <input id="Email" name="Email" value="" type="email" style="color:black">
                        <br />
                        <label for="Phone">Mobile #</label>
                        <input id="Phone" name="Phone" value="" type="number" style="color:black">
                        <br />
                        <label for="Address">Address</label>
                        <input id="Address" name="Address" value="" type="text" style="color:black">
                        <br />
                        <label for="Gender">Gender</label>
                        <input type="radio" name="gender" style="width:25px" value="male" checked>Male<br>
                        <input type="radio" style="width:25px" name="gender" value="female">Female<br>
                        <br />
                        <label for="Role">Status</label>
                        <input type="radio" name="Status" style="width:25px" value="active" checked>Active<br>
                        <input type="radio" style="width:25px" name="Status" value="disable">Disable<br>

                        <input value="Sign Up" id="signup" class="btn btn-default " type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

